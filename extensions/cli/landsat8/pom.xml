<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.locationtech.geowave</groupId>
		<artifactId>geowave-extension-parent</artifactId>
		<relativePath>../../</relativePath>
		<version>1.0.0-SNAPSHOT</version>
	</parent>
	<properties>
		<!-- to maintain only one download of GDAL, re-use the IT build directory -->
		<gdal.dir>${project.basedir}/../../../test/target/temp/gdal</gdal.dir>
		<tools.scope>compile</tools.scope>
	</properties>

	<artifactId>geowave-cli-landsat8</artifactId>
	<name>GeoWave LandSat8 Operations</name>
	<description>GeoWave support for public LandSat8 data</description>
	<dependencies>
		<dependency>
			<groupId>it.geosolutions.imageio-ext</groupId>
			<artifactId>imageio-ext-gdalgeotiff</artifactId>
		</dependency>
		<dependency>
			<groupId>org.geotools</groupId>
			<artifactId>gt-imageio-ext-gdal</artifactId>
		</dependency>
		<dependency>
			<groupId>org.locationtech.geowave</groupId>
			<artifactId>geowave-adapter-raster</artifactId>
			<version>${project.version}</version>
			<scope>${tools.scope}</scope>
		</dependency>
		<dependency>
			<groupId>org.locationtech.geowave</groupId>
			<artifactId>geowave-adapter-vector</artifactId>
			<version>${project.version}</version>
			<scope>${tools.scope}</scope>
		</dependency>
		<dependency>
			<groupId>org.locationtech.geowave</groupId>
			<artifactId>geowave-core-ingest</artifactId>
			<version>${project.version}</version>
			<scope>${tools.scope}</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.commons</groupId>
			<artifactId>commons-csv</artifactId>
			<version>1.1</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2.1</version>
				<executions>
					<execution>
						<id>install-gdal</id>
						<phase>generate-test-resources</phase>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>org.locationtech.geowave.adapter.raster.plugin.gdal.InstallGdal</mainClass>
					<arguments>
						<argument>${gdal.dir}</argument>
					</arguments>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
